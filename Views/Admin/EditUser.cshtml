@model EditUserViewModel

@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Editing user";
}

<h2>Editing user</h2>
<p>Id : @Model.Id</p>
<hr />
<form method="post">
    <div class="form-group">
        <label>Username</label>
        <div><span asp-validation-for="@Model.UserName" class="text-danger"></span></div>
        <input asp-for="@Model.UserName" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <div><span asp-validation-for="@Model.Email" class="text-danger"></span></div>
        <input asp-for="@Model.Email" />
    </div>
    @for(int i = 0; i < Model.RoleList.Count(); i++) {
        <label>@Model.RoleList[i].Name</label>
        <input type="hidden" asp-for="@Model.RoleList[i].Id"/>
        <input asp-for="@Model.RoleList[i].IsSelected" type="checkbox" />
        <br />
    }
    <input type="submit" value="Confirm changes"/>
</form>