@model ForumSection

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add new section";
}

<form method="post">
    <div class="form-group">
        <div><span asp-validation-for="@Model.Name"></span></div>
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" />
    </div>
    <div class="form-group">
        <div><span asp-validation-for="@Model.Description"></span></div>
        <label asp-for="@Model.Description"></label>
        <input asp-for="@Model.Description" />
    </div>
    <input type="submit" value="Confirm" />
</form>