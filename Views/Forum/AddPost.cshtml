@model ForumPost

@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Add new thread";
} 

<form method="post">
    <div class="form-group">
        <div><span asp-validation-for="@Model.Title"></span></div>
        <label asp-for="@Model.Title"></label><br />
        <input asp-for="@Model.Title" />
    </div>
    <div class="form-group">
        <div><span asp-validation-for="@Model.Content"></span></div>
        <label asp-for="@Model.Content"></label><br />
        <input asp-for="@Model.Content" type=""/>
    </div>
</form>